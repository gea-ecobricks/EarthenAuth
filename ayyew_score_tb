CREATE TABLE ayyew_score_tb (
    ayyew_score_id INT AUTO_INCREMENT PRIMARY KEY,
    user_id INT NOT NULL,
    country_id INT NOT NULL,
    per_capita_consumption DECIMAL(15,2) DEFAULT NULL,
    current_ayyew_score DECIMAL(10,2) DEFAULT 0.00,
    plastic_score DECIMAL(10,2) DEFAULT 0.00,
    carbon_score DECIMAL(10,2) DEFAULT 0.00,
    biodiversity_score DECIMAL(10,2) DEFAULT 0.00,
    plastic_consumed_month DECIMAL(15,2) DEFAULT 0.00,
    plastic_produced_month DECIMAL(15,2) DEFAULT 0.00,
    plastic_total_year_so_far DECIMAL(15,2) DEFAULT 0.00,
    plastic_ecobricked_year_so_far DECIMAL(15,2) DEFAULT 0.00,
    plastic_offset_year_so_far DECIMAL(15,2) DEFAULT 0.00,
    plastic_total_total DECIMAL(15,2) DEFAULT 0.00,
    plastic_ecobricked_total DECIMAL(15,2) DEFAULT 0.00,
    plastic_offset_total DECIMAL(15,2) DEFAULT 0.00,
    FOREIGN KEY (user_id) REFERENCES users(user_id),
    FOREIGN KEY (country_id) REFERENCES countries(country_id)
);
